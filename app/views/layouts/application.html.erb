<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if user_signed_in? %>
          <%= raw t('message.header', email: current_user.email) %>
          <%= link_to t('views.common.edit_profile'), edit_user_registration_path %> |
          <%= link_to t('views.common.log_out'), destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to t('views.common.sign_up'), new_user_registration_path %> |
          <%= link_to t('views.common.log_in'), new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="notice"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
